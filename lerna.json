{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "publish": {
      "ignoreChanges": ["**/node_modules/**", "**/package.json", "**/*.md"],
      "loglevel": "verbose"
    }
  },
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "independent",
  "publishConfig": {
    "access": "public"
  }
}
